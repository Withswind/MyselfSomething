*
	margin 0
	padding 0
font-size-scale = 1 2 3 4 5
for num in font-size-scale
	.nav
		li:nth-of-type({num})
			div
				background-image url("../../image/aliyun/nav"+num+".png")
				background-repeat no-repeat
.headWrap
	width 100%
	height 500px
	position  relative
	.bgBottom
		position absolute
		top 0
		left 50%
		width 1920px
		height 500px
		margin-left -960px
		background-image url(../../image/aliyun/bg_head.png)
		z-index -1
	.bg
		width 100%
		height 500px
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		z-index -2
		text-align center
		overflow hidden
		div 
			height 500px
			display none
			&.show
				display block
	.header
		.navbar
			width 1200px
			height 90px
			margin 0 auto
			color white
			position relative
			.logo
				display inline-block
				position relative
				top -30px
				line-height 90px
			.nav
				display inline-block
				li
					position relative
					float left
					list-style none
					line-height 90px
					font-size 16px
					font-weight 200
					padding 0 18px
					&:hover
						background-color rgb(0,150,187)
					div
						position absolute
						left 0px
						z-index 9
						width 930px
						height 300px
						display none
			.right
				display inline-block
				float right
				li
					position relative
					float left
					list-style none
					line-height 90px
					font-size 14px
					padding 0 20px
					a
						.icon
							display inline-block
							vertical-align super
							width 16px
							height 6px
							border-bottom 1px solid rgb(255,255,255)
							transition height .3s
							&:hover
								height 9px
								transition height .3s
								&:after
									height 16px
									transition height .3s
							&:before
								display block
								content ""
								border-top 1px solid
								width 16px
								height 0px
							&:after
								display block
								content ""
								border-bottom 1px solid
								width 16px
								height 10px
								transition height .3s
					div
						position absolute
						right 0px
						z-index 9
						width 140px
						height 160px
						background-image url(../../image/aliyun/nav6.png)
						display none
	.slider
		position relative
		.item
			position relative
			display none
			width 1200px
			height 348px
			margin 0 auto
			color white
			&.show
				display block
			h1
				font-size 48px
				font-weight 100
				padding-top 120px
				margin-bottom 15px
			h2
				font-size 20px
				font-weight 100
				line-height 30px
				margin-bottom 37px					
			p
				display inline-block
				width 180px
				font-size 16px
				border 1px solid white
				text-align center
				line-height 42px
			&.last
				text-align center
				p
					background-color rgb(0,162,202)
					border-color rgb(0,162,202)
	.sliderIndex
		position relative
		z-index 20
		text-align center
		.index
			display inline-block
			width 16px
			height 16px
			border-radius 8px
			background-color rgba(255,255,255,.5)
			margin 0 5px
			&:hover
				background-color white
			&.current
				background-color white
